{
    "dotnet-test-explorer.autoExpandTree": true,
    
    "dotnet-test-explorer.autoWatch": true,
    
    "dotnet-test-explorer.treeMode": "full",
    
    "dotnet-test-explorer.testArguments": "/p:CollectCoverage=true /p:CoverletOutputFormat=lcov /p:CoverletOutput=./TestCover/lcov.info",
    
    "dotnet-test-explorer.testProjectPath": "**/*.csproj",
    
    "coverage-gutters.coverageFileNames":[
        "lcov.info",
        "cov.xml",
        "coverage.xml",
        "jacoco.xml",
        "coverage.cobertura.xml",
        "coverage.json"        
      ],
      "java.configuration.updateBuildConfiguration": "interactive"
    }